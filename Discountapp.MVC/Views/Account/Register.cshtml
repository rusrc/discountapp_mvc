@model Discountapp.MVC.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<section class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 well">

           @using(Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
           {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset>
                    <legend class="h3">
                        Авторизация
                    </legend>

                    <div class="form-group label-floating is-empty">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label", @for = "dateExpired" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "dateExpired" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        <p class="help-block">Например: example@mail.ru</p>
                    </div>
                    <div class="form-group label-floating is-empty">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group label-floating is-empty">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div id="g-recaptcha1" class="g-recaptcha" @*data-sitekey="6LcBTBsTAAAAAJeaRZI5u4NtvhChGWImBWhUlIdS"*@></div>
                    </div>
                    <div class="form-group">
                        Уже есть аккаунт? <a href="@Url.Action("Login","Account")">Авторизуйтесь</a>
                    </div>
                    <button type="submit" class="btn btn-primary btn-raised btn-block"><b>Войти</b></button>

                </fieldset>
            }

        </div>
    </div>
</section>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script src="https://www.google.com/recaptcha/api.js?render=explicit&onload=onReCaptchaLoad" async defer></script>

    <script type="text/javascript">
        var onReCaptchaLoad = function ()
        {
            widgetId1 = grecaptcha.render('g-recaptcha1', {
                'sitekey': '6LcBTBsTAAAAAJeaRZI5u4NtvhChGWImBWhUlIdS',
                'theme': 'dark'
            });
        };
    </script>
}
